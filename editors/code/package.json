{
	"name": "jarl-vscode",
	"displayName": "Jarl",
	"description": "Just Another R Linter",
	"version": "0.0.10",
	"publisher": "etiennebacher",
	"license": "MIT",
	"homepage": "https://github.com/etiennebacher/jarl",
	"repository": {
		"type": "git",
		"url": "https://github.com/etiennebacher/jarl.git"
	},
	"bugs": {
		"url": "https://github.com/etiennebacher/jarl/issues"
	},
	"keywords": [
		"r",
		"linter",
		"diagnostics"
	],
	"engines": {
		"vscode": "^1.90.0"
	},
	"categories": [
		"Linters",
		"Programming Languages"
	],
	"activationEvents": [
		"onLanguage:r",
		"workspaceContains:*.r",
		"workspaceContains:*.R",
		"workspaceContains:jarl.toml",
		"workspaceContains:.jarl.toml",
		"workspaceContains:DESCRIPTION",
		"workspaceContains:*.Rproj"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "r",
				"extensions": [
					".R",
					".r",
					".Rprofile",
					".rprofile"
				],
				"aliases": [
					"R",
					"r"
				],
				"filenames": [
					"NAMESPACE"
				]
			}
		],
		"configuration": {
			"properties": {
				"jarl.logLevel": {
					"default": null,
					"markdownDescription": "Controls the log level of the language server.",
					"enum": [
						"error",
						"warning",
						"info",
						"debug",
						"trace"
					],
					"scope": "application",
					"type": "string"
				},
				"jarl.dependencyLogLevels": {
					"default": null,
					"markdownDescription": "Controls the log level of the Rust crates that the language server depends on.",
					"scope": "application",
					"type": "string"
				},
				"jarl.assignmentOperator": {
					"default": "<-",
					"markdownDescription": "Controls the preferred assignment operator and will report usage of the other one if the `assignment` linter is active. Changes take effect immediately.",
					"enum": [
						"<-",
						"="
					],
					"scope": "window",
					"type": "string"
				},
				"jarl.syncFileSettingsWithClient": {
					"default": true,
					"markdownDescription": "Whether settings from jarl.toml files should be propagated to the client (the IDE).",
					"scope": "application",
					"type": "boolean"
				},
				"jarl.executableStrategy": {
					"default": "bundled",
					"markdownDescription": "Strategy used to locate the `jarl` executable to start the language server with.",
					"enum": [
						"bundled",
						"environment",
						"path"
					],
					"enumDescriptions": [
						"Always use the bundled `jarl` executable.",
						"Look for a `jarl` executable using the `PATH` environment variable, falling back to the bundled version.",
						"Look for a `jarl` executable at the fixed path provided by `jarl.executablePath`."
					],
					"scope": "window",
					"type": "string"
				},
				"jarl.executablePath": {
					"default": null,
					"markdownDescription": "The path to a `jarl` executable. Only utilized when `jarl.executableStrategy` is set to \"path\".",
					"scope": "window",
					"type": "string"
				}
			}
		},
		"commands": [
			{
				"title": "Restart Server",
				"category": "Jarl",
				"command": "jarl.restart"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"vsce:package": "vsce package",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src",
		"test": "vscode-test"
	},
	"dependencies": {
		"@types/p-queue": "^3.1.0",
		"adm-zip": "^0.5.16",
		"fs-extra": "^11.1.1",
		"p-queue": "npm:@esm2cjs/p-queue@^7.3.0",
		"vscode-languageclient": "^9.0.1",
		"which": "^4.0.0"
	},
	"devDependencies": {
		"@types/adm-zip": "^0.5.6",
		"@types/fs-extra": "^11.0.4",
		"@types/mocha": "^10.0.9",
		"@types/node": "20.x",
		"@types/vscode": "^1.90.0",
		"@types/which": "^3.0.4",
		"@typescript-eslint/eslint-plugin": "^8.10.0",
		"@typescript-eslint/parser": "^8.7.0",
		"@vscode/test-cli": "^0.0.10",
		"@vscode/test-electron": "^2.4.1",
		"@vscode/vsce": "^3.6.2",
		"eslint": "^9.13.0",
		"prettier": "^3.4.2",
		"ts-loader": "^9.5.1",
		"typescript": "^5.6.3",
		"webpack": "^5.95.0",
		"webpack-cli": "^5.1.4"
	}
}
